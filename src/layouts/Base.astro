---
import Header from '../components/SiteHeader.astro';
import Footer from '../components/Footer.astro';
import OrganizationJsonLd from '../components/seo/OrganizationJsonLd.astro';
import LocalBusinessJsonLd from '../components/seo/LocalBusinessJsonLd.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import { DEFAULT_WA } from '../config/whatsapp';
import { DEFAULT_EMAIL } from '../config/contact';
import logo from '../assets/logo.png';
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
import  SpeedInsights  from "@vercel/speed-insights/astro";
// Use import.meta.env for consistency, with fallback
const ENV = import.meta.env || {};

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'es';
  robots?: string;
  breadcrumb?: { name: string; url: string }[];
}

const {
  title = 'ByteWorks | Modern web design & hosting',
  description = 'Websites that work for you, not against you.\nBilingual, fast, and affordable.',
  image = '/og-image.png',
  lang = 'en',
  robots = 'index,follow',
  breadcrumb = [],
} = Astro.props as Props;

function withTrailingSlash(pathname: string) {
  if (!pathname.endsWith('/')) return `${pathname}/`;
  return pathname;
}

const rawPath = Astro.url.pathname || '/';
const canonicalPath = withTrailingSlash(rawPath);
const url = new URL(canonicalPath, Astro.site);
let siteOrigin = '';
try { siteOrigin = new URL('/', Astro.site).origin; } catch { siteOrigin = url.origin; }
const ogImage = image && image.startsWith('http') ? image : siteOrigin + image;

function altHref(targetLang: 'en' | 'es') {
  const parts = canonicalPath.split('/').filter(Boolean);
  if (parts.length === 0) return new URL(`/${targetLang}/`, siteOrigin).href;
  if (parts[0] === 'en' || parts[0] === 'es') {
    parts[0] = targetLang;
  } else {
    parts.unshift(targetLang);
  }
  return new URL(`/${parts.join('/')}/`, siteOrigin).href;
}

const logoUrl = new URL(logo.src, siteOrigin).href;

function toE164(raw: string) {
  const trimmed = (raw || '').trim();
  if (!trimmed) return '';
  if (trimmed.startsWith('+')) {
    const digits = trimmed.replace(/[^\d]/g, '');
    return digits ? `+${digits}` : '';
  }
  const digits = trimmed.replace(/\D/g, '');
  if (!digits) return '';
  if (digits.length === 11 && digits.startsWith('1')) return `+${digits}`;
  if (digits.length === 10) return `+1${digits}`;
  return `+${digits}`;
}

const PLAUSIBLE = ENV.PUBLIC_PLAUSIBLE_DOMAIN || '';
const CF_TOKEN = ENV.PUBLIC_CLOUDFLARE_ANALYTICS_TOKEN || '';

// expone el nÃºmero al DOM como data attribute (usa env o fallback temporal)
const WA_FROM_ENV = (ENV.PUBLIC_WHATSAPP_PHONE || DEFAULT_WA || '').toString();
const contactEmail = (ENV.PUBLIC_CONTACT_EMAIL || DEFAULT_EMAIL || '').toString();
const contactPhoneRaw = (ENV.PUBLIC_WHATSAPP_PHONE || ENV.PUBLIC_CONTACT_PHONE || DEFAULT_WA || '').toString();
const contactPhoneE164 = toE164(contactPhoneRaw);
const organizationId = `${siteOrigin}#organization`;
const socials = ['https://www.instagram.com/byteworksagency/'];
const servedCountries = [
  { '@type': 'Country', name: 'Trinidad and Tobago' },
  { '@type': 'Country', name: 'United States' },
];
const orgContactPoint = {
  '@type': 'ContactPoint',
  telephone: contactPhoneE164,
  contactType: 'Customer Service',
  email: contactEmail,
  areaServed: servedCountries,
  availableLanguage: ['en', 'es']
};


const orgAreaServed = [
  ...servedCountries,
  'Remote',
];

const orgServiceType = ['Web Design', 'Web Development', 'SEO Consulting'];
const orgTypes = ['ProfessionalService'];
const robotsMeta = robots ?? ((import.meta.env.MODE === 'production') ? 'index,follow' : 'noindex,nofollow');
const webPageJson = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: title,
  description,
  url: url.href,
  inLanguage: lang,
  isPartOf: { '@id': organizationId },
  primaryImageOfPage: ogImage,
};
const breadcrumbJson =
  Array.isArray(breadcrumb) && breadcrumb.length
    ? {
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        itemListElement: breadcrumb.map((item, idx) => ({
          '@type': 'ListItem',
          position: idx + 1,
          name: item.name,
          item: item.url,
        })),
      }
    : null;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={url.href} />
    <meta property="og:site_name" content="ByteWorks" />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : 'en_US'} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="robots" content={robotsMeta} />
    <meta property="og:type" content="website" />
    <meta name="theme-color" content="#00BCD4" />
    <meta name="color-scheme" content="light dark" />
    <link rel="canonical" href={url.href} />

    <link rel="alternate" hreflang="en" href={altHref('en')} />
    <link rel="alternate" hreflang="es" href={altHref('es')} />
    <link rel="alternate" hreflang="x-default" href={altHref('en')} />



    <OrganizationJsonLd
      id={organizationId}
      name="ByteWorks"
      url={siteOrigin}
      logo={logoUrl}
      sameAs={socials}
      contactPoint={[{
        '@type': 'ContactPoint',
        telephone: contactPhoneE164,
        contactType: 'Customer Service',
        email: contactEmail,
        areaServed: servedCountries,
        availableLanguage: ['en', 'es']
      }]}
      areaServed={[...servedCountries, 'Remote']}
      serviceType={orgServiceType}
      types={orgTypes}
    />
    <script is:inline type="application/ld+json">{JSON.stringify(webPageJson)}</script>
    {breadcrumbJson && <script is:inline type="application/ld+json">{JSON.stringify(breadcrumbJson)}</script>}

    <!-- Fonts: preconnect + async loading for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Manrope:wght@600;700;800&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Manrope:wght@600;700;800&display=swap" rel="stylesheet" />
    </noscript>
    <!-- Material Symbols Outlined -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    </noscript>

    {PLAUSIBLE && (
      <script defer data-domain={PLAUSIBLE} src="https://plausible.io/js/script.js"></script>
    )}
    {CF_TOKEN && (
      <script
        defer
        src="https://static.cloudflareinsights.com/beacon.min.js"
        data-cf-beacon={`{"token": "${CF_TOKEN}"}`}
      ></script>
    )}

    <link rel="icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />

    <style is:global>
      /* Critical CSS */
      .material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; }
      
      /* View Transitions - smooth page animations */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 200ms;
        animation-timing-function: ease-out;
      }
      
      ::view-transition-old(root) {
        animation-name: fade-out;
      }
      
      ::view-transition-new(root) {
        animation-name: fade-in;
      }
      
      @keyframes fade-out {
        from { opacity: 1; transform: translateY(0); }
        to { opacity: 0; transform: translateY(-10px); }
      }
      
      @keyframes fade-in {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
      }
      
      @media (prefers-reduced-motion: reduce) {
        ::view-transition-old(root),
        ::view-transition-new(root) {
          animation: none;
        }
      }
    </style>

    <ClientRouter />
    
    <!-- Service Worker Registration -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
    </script>

  </head>

  <body
    class="min-h-screen flex flex-col font-body bg-background-light text-gray-900 dark:bg-background-dark dark:text-text-secondary"
    data-wa={WA_FROM_ENV}
  >
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-[1000] bg-black text-white dark:bg-white dark:text-black px-3 py-2 rounded">Skip to content</a>
    <Header lang={lang} />
    
    {/* Breadcrumbs UI */}
    {breadcrumb.length > 0 && (
      <nav aria-label="Breadcrumb" class="w-full max-w-[960px] mx-auto px-4 pt-20 md:pt-24 pb-2">
        <ol class="flex flex-wrap items-center gap-1 text-sm text-gray-500 dark:text-gray-400">
          {breadcrumb.map((item, i) => (
            <li class="flex items-center gap-1">
              {i > 0 && <span aria-hidden="true">/</span>}
              {i === breadcrumb.length - 1 ? (
                <span class="text-gray-900 dark:text-white font-medium" aria-current="page">{item.name}</span>
              ) : (
                <a href={item.url} class="hover:text-primary hover:underline">{item.name}</a>
              )}
            </li>
          ))}
        </ol>
      </nav>
    )}
    
    <main id="main" data-astro-transition-scope="page" class:list={["flex-1 px-4 lg:px-40 pb-10 flex justify-center", breadcrumb.length > 0 ? "pt-2" : "pt-20 md:pt-24"]}>
      <slot />
    </main>
    <Footer lang={lang} />
    <WhatsAppButton lang={lang} />
    <ScrollToTop />
    <LocalBusinessJsonLd lang={lang} />
    <SpeedInsights />
  </body>
</html>
