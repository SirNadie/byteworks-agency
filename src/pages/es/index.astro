---
import Base from "../../layouts/Base.astro";
import AddOns from "../../components/AddOns.astro";
import PlanIcon from "../../components/PlanIcon.astro";
import ScrollReveal from "../../components/ScrollReveal.astro";
import FAQAccordion from "../../components/FAQAccordion.astro";
import { HOME_FAQS, HOME_PLANS } from "../../content/home";

const title = "ByteWorks | Sitios web bilingües con mantenimiento incluido";
const description =
  "Diseñamos sitios bilingües, rápidos y con precios claros. Hosting, SSL y actualizaciones mensuales incluidas para que te enfoques en tu negocio.";

const planesHome = HOME_PLANS.es;
const faqs = HOME_FAQS.es;
---

<Base title={title} description={description} image="/og-image.png" lang="es">
  <section class="px-4 max-w-[960px] mx-auto py-20" id="about">
    <!-- HERO -->
    <div class="text-center space-y-6">
      <h1
        class="hero-animate text-4xl md:text-6xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
      >
        Eleva tu marca con diseño web impactante
      </h1>
      <p
        class="hero-animate-delay-1 text-base md:text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto"
      >
        Diseño y desarrollo web por suscripción para emprendedores, marcas
        personales y pequeños negocios.
      </p>
      <div class="hero-animate-delay-2 flex items-center justify-center">
        <a
          href="/es/pricing"
          class="btn-hover inline-flex items-center justify-center h-12 px-6 rounded-lg bg-transparent text-gray-900 dark:text-white border border-primary hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors"
          >Ver planes</a
        >
      </div>
    </div>

    <!-- BENEFICIOS -->
    <ScrollReveal class="mt-16">
      <div class="grid md:grid-cols-3 gap-6 stagger-children">
        <div
          class="card-hover p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50"
        >
          <h3
            class="font-heading font-bold text-gray-900 dark:text-text-primary mb-2"
          >
            Bilingüe desde el inicio
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Estructura en inglés y español con rutas amigables para SEO.
          </p>
        </div>
        <div
          class="card-hover p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50"
        >
          <h3
            class="font-heading font-bold text-gray-900 dark:text-text-primary mb-2"
          >
            Precios transparentes
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Opciones mensuales/anuales, mantenimiento incluido y sin sorpresas.
          </p>
        </div>
        <div
          class="card-hover p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50"
        >
          <h3
            class="font-heading font-bold text-gray-900 dark:text-text-primary mb-2"
          >
            Rápido y seguro
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Rendimiento, SSL y copias de seguridad incluidos.
          </p>
        </div>
      </div>
    </ScrollReveal>

    <!-- PLANES -->
    <ScrollReveal class="mt-20" id="pricing">
      <div class="flex flex-col gap-4 text-center mb-6">
        <h2
          class="text-3xl md:text-4xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
        >
          Precios transparentes
        </h2>
        <p
          class="text-base font-normal leading-normal max-w-2xl mx-auto text-gray-600 dark:text-gray-300"
        >
          Elige el plan que te funcione. Sin tarifas ocultas.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          planesHome.map((p) => (
            <div
              class={`card-hover relative flex h-full flex-col rounded-xl bg-white dark:bg-background-dark/50 p-6 ${p.name === "Pro" ? "border-2 border-primary" : "border border-gray-200 dark:border-gray-700"}`}
            >
              {p.name === "Pro" && (
                <p class="absolute top-0 -translate-y-1/2 left-1/2 -translate-x-1/2 text-white text-xs font-medium tracking-[0.015em] rounded-full bg-secondary px-3 py-1 text-center">
                  Más Popular
                </p>
              )}
              <div class="space-y-1">
                <h3
                  class={`flex items-center gap-3 text-2xl md:text-3xl font-extrabold tracking-[-0.025em] font-heading ${p.name === "Pro" ? "text-primary" : "text-gray-900 dark:text-text-primary"}`}
                >
                  <PlanIcon name={p.name} />
                  {p.name}
                </h3>
                <div class="flex items-center gap-2">
                  <p class="text-lg md:text-xl font-semibold text-gray-900 dark:text-text-primary">
                    {p.price}
                  </p>
                  <span class="inline-block text-[11px] md:text-xs font-medium bg-primary/10 text-primary px-2 py-0.5 rounded">
                    {p.yearly}
                  </span>
                </div>
              </div>
              <ul class="mt-4 space-y-2 text-sm text-gray-600 dark:text-gray-300">
                {p.features.map((f) => (
                  <li class="flex gap-3 items-center">
                    <span class="material-symbols-outlined text-primary text-base">
                      check
                    </span>
                    {f}
                  </li>
                ))}
              </ul>
              <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-700">
                <a
                  href="/es/pricing"
                  class="btn-hover inline-flex w-full items-center justify-center h-10 px-4 rounded-lg bg-primary text-white font-bold hover:bg-primary/90 transition-colors"
                >
                  Ver planes
                </a>
              </div>
            </div>
          ))
        }
      </div>
      <p class="text-center text-xs text-gray-500 dark:text-gray-400 mt-3">
        Precios en USD. Para otros métodos de pago/monedas, contáctanos.
      </p>
    </ScrollReveal>

    <AddOns lang="es" id="add-ons" summaryOnly={true} />

    <!-- COMO FUNCIONA -->
    <div class="mt-20" id="how-it-works">
      <div class="flex flex-col gap-4 text-center mb-8">
        <h2
          class="text-3xl md:text-4xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
        >
          Nuestro proceso
        </h2>
        <p
          class="text-base font-normal leading-normal max-w-2xl mx-auto text-gray-600 dark:text-gray-300"
        >
          Seguimos un proceso claro y transparente para hacer realidad tu
          visión.
        </p>
      </div>
      <div class="grid grid-cols-[auto_1fr] gap-x-8 gap-y-4 max-w-md mx-auto">
        <div class="flex flex-col items-center gap-2">
          <div
            class="icon-pulse flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">search</span>
          </div>
          <div class="w-px bg-gray-300 dark:bg-gray-600 flex-grow"></div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Descubrimiento
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Entendemos metas, audiencia y requisitos. 1 a 2 semanas.
          </p>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div
            class="icon-pulse flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">design_services</span>
          </div>
          <div class="w-px bg-gray-300 dark:bg-gray-600 flex-grow"></div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Diseño
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Diseño moderno y usable para tu sitio. 2 a 3 semanas.
          </p>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div
            class="icon-pulse flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">developer_mode</span>
          </div>
          <div class="w-px bg-gray-300 dark:bg-gray-600 flex-grow"></div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Desarrollo
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Construimos con código limpio y stack moderno. 3 a 4 semanas.
          </p>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div
            class="icon-pulse flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">rocket_launch</span>
          </div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Lanzamiento
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            Desplegamos y damos soporte para el éxito. 1 semana.
          </p>
        </div>
      </div>
    </div>

    <!-- SECCIÓN FAQ -->
    <ScrollReveal class="mt-20" delay={100}>
      <div id="faq">
        <div class="flex flex-col gap-4 text-center mb-8">
          <h2
            class="text-3xl md:text-4xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
          >
            Preguntas Frecuentes
          </h2>
          <p
            class="text-base font-normal leading-normal max-w-2xl mx-auto text-gray-600 dark:text-gray-300"
          >
            Respuestas rápidas a dudas comunes.
          </p>
        </div>
        <FAQAccordion faqs={faqs} lang="es" />
        <p class="text-center mt-6">
          <a href="/es/faq" class="text-primary hover:underline font-medium">
            Ver todas las preguntas →
          </a>
        </p>
      </div>
    </ScrollReveal>
  </section>
</Base>
