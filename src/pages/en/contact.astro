---
import Base from "../../layouts/Base.astro";

const title = "Contact Us | ByteWorks - Let's Build Your Website";
const description =
  "Get in touch with ByteWorks to start your web design project. Contact us via our form or social media to discuss your ideas and get a quote for a professional, bilingual website.";
const breadcrumb = [
  { name: "Home", url: "https://byteworksagency.com/en/" },
  { name: "Contact", url: "https://byteworksagency.com/en/contact/" },
];

const phone = (import.meta.env || {}).PUBLIC_WHATSAPP_PHONE || "";
const message =
  (import.meta.env || {}).PUBLIC_WHATSAPP_MSG ||
  "Hi ByteWorks, I'm interested in a website.";
const wa = phone
  ? `https://wa.me/${phone}?text=${encodeURIComponent(message)}`
  : null;
---

<Base
  title={title}
  description={description}
  image="/og-image.png"
  lang="en"
  breadcrumb={breadcrumb}
>
  <section
    class="px-6 md:px-10 lg:px-16 max-w-3xl mx-auto py-16 md:py-24 text-center space-y-8"
    data-wa={phone || ""}
  >
    <h1 class="text-3xl md:text-5xl font-semibold">Let’s work together</h1>
    <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
      Ready to start? We're here to help. Pick any social link from the “Follow
      Us” section. The form below gives us the essentials so we can respond
      fast.
    </p>

    <form id="contact-form" class="mt-12 text-left space-y-5 max-w-md mx-auto">
      <div>
        <label for="name" class="block text-sm font-medium mb-1"
          >Name / Brand / Company / Organization</label
        >
        <input
          id="name"
          name="name"
          type="text"
          required
          placeholder="e.g. Jane Doe / ACME Inc."
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white transition-all duration-200"
        />
      </div>

      <div id="phone_wrap" class="">
        <label for="phone" class="block text-sm font-medium mb-1"
          >Preferred contact (WhatsApp or social handle)</label
        >
        <input
          id="phone"
          name="phone"
          type="tel"
          inputmode="tel"
          placeholder="e.g. @brandhandle or +1 868 775 9858"
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white transition-all duration-200"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium mb-1"
          >Email Address</label
        >
        <input
          id="email"
          name="email"
          type="email"
          required
          placeholder="e.g. contact@company.com"
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white transition-all duration-200"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium mb-1"
          >Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          placeholder="Tell us a bit about your project..."
          class="w-full rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-black px-3 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-black dark:focus:ring-white transition-all duration-200"
        ></textarea>
      </div>

      <!-- Honeypot fields - hidden from users, checked on submit -->
      <input
        type="text"
        id="website"
        name="website"
        tabindex="-1"
        autocomplete="off"
        style="position:absolute;left:-10000px;top:auto;width:1px;height:1px;overflow:hidden;"
        aria-hidden="true"
      />
      <input
        type="url"
        id="company_url"
        name="company_url"
        tabindex="-1"
        autocomplete="off"
        style="opacity:0;position:absolute;top:0;left:0;height:0;width:0;z-index:-1;pointer-events:none;"
        aria-hidden="true"
      />

      <button
        id="submitBtn"
        type="submit"
        class="w-full md:w-auto inline-flex items-center justify-center px-6 py-3 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition"
      >
        Send Message
      </button>

      <p
        id="formStatus"
        role="status"
        aria-live="polite"
        class="text-sm text-gray-600 dark:text-gray-300 min-h-[1.5rem]"
        data-tone="idle"
      >
      </p>
    </form>

    <div
      class="border-top border-gray-200 dark:border-gray-800 pt-10 mt-10 text-sm text-gray-600 dark:text-gray-400"
    >
      <p>Prefer a call? We'll schedule one after a chat.</p>
      <p class="mt-2 text-xs text-gray-500">Support: Mon-Fri, 9AM-6PM (AST)</p>
    </div>
  </section>

  <!-- Modal Overlay -->
  <div
    id="formModal"
    class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm"
  >
    <div
      class="bg-white dark:bg-gray-900 rounded-xl shadow-2xl p-8 max-w-sm mx-4 text-center"
    >
      <!-- Loading State -->
      <div id="modalLoading" class="hidden">
        <div
          class="animate-spin w-12 h-12 border-4 border-primary border-t-transparent rounded-full mx-auto mb-4"
        >
        </div>
        <p class="text-lg font-medium text-gray-900 dark:text-white">
          Sending...
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Please wait</p>
      </div>

      <!-- Success State -->
      <div id="modalSuccess" class="hidden">
        <div
          class="w-16 h-16 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <svg
            class="w-8 h-8 text-green-600 dark:text-green-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <p class="text-xl font-bold text-gray-900 dark:text-white mb-2">
          Message Sent!
        </p>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          Thank you for contacting us. We'll get back to you as soon as
          possible.
        </p>
        <button
          id="modalOkBtn"
          class="w-full py-3 px-6 bg-primary text-white font-bold rounded-lg hover:bg-primary/90 transition-colors"
        >
          OK
        </button>
      </div>

      <!-- Error State -->
      <div id="modalError" class="hidden">
        <div
          class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <svg
            class="w-8 h-8 text-red-600 dark:text-red-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </div>
        <p class="text-xl font-bold text-gray-900 dark:text-white mb-2">
          Something went wrong
        </p>
        <p class="text-gray-600 dark:text-gray-300 mb-6">
          Please try again later or contact us directly.
        </p>
        <button
          id="modalRetryBtn"
          class="w-full py-3 px-6 bg-primary text-white font-bold rounded-lg hover:bg-primary/90 transition-colors"
        >
          Try Again
        </button>
      </div>
    </div>
  </div>

  <script>
    (function () {
      // Type-safe element getters with proper type guards
      const form = document.getElementById("contact-form");
      if (!(form instanceof HTMLFormElement)) return;

      const nameEl = document.getElementById("name");
      const emailEl = document.getElementById("email");
      const phoneEl = document.getElementById("phone");
      const messageEl = document.getElementById("message");
      const hpEl = document.getElementById("website");
      const hp2El = document.getElementById("company_url");
      const btn = document.getElementById("submitBtn");
      const statusEl = document.getElementById("formStatus");

      if (!(nameEl instanceof HTMLInputElement)) return;
      if (!(emailEl instanceof HTMLInputElement)) return;
      if (!(phoneEl instanceof HTMLInputElement)) return;
      if (!(messageEl instanceof HTMLTextAreaElement)) return;
      if (!(hpEl instanceof HTMLInputElement)) return;
      if (!(hp2El instanceof HTMLInputElement)) return;
      if (!(btn instanceof HTMLButtonElement)) return;
      if (!(statusEl instanceof HTMLParagraphElement)) return;

      // Email validation regex
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      // Validation state classes (as arrays for classList operations)
      const validClasses = ["border-green-500", "dark:border-green-400"];
      const invalidClasses = ["border-red-500", "dark:border-red-400"];

      function setFieldState(
        el: HTMLInputElement | HTMLTextAreaElement,
        isValid: boolean | null,
      ) {
        el.classList.remove(...validClasses, ...invalidClasses);
        if (isValid === true) {
          el.classList.add(...validClasses);
        } else if (isValid === false) {
          el.classList.add(...invalidClasses);
        }
      }

      function validateField(
        el: HTMLInputElement | HTMLTextAreaElement,
        pattern?: RegExp,
      ): boolean {
        const value = el.value.trim();
        if (!value) {
          setFieldState(el, null);
          return false;
        }
        const isValid = pattern ? pattern.test(value) : value.length > 0;
        setFieldState(el, isValid);
        return isValid;
      }

      // Real-time validation on blur
      nameEl.addEventListener("blur", () => validateField(nameEl));
      emailEl.addEventListener("blur", () =>
        validateField(emailEl, emailRegex),
      );
      phoneEl.addEventListener("blur", () => validateField(phoneEl));
      messageEl.addEventListener("blur", () => validateField(messageEl));

      // Also validate on input for immediate feedback after first blur
      nameEl.addEventListener("input", () => {
        if (nameEl.value) validateField(nameEl);
      });
      emailEl.addEventListener("input", () => {
        if (emailEl.value) validateField(emailEl, emailRegex);
      });
      phoneEl.addEventListener("input", () => {
        if (phoneEl.value) validateField(phoneEl);
      });
      messageEl.addEventListener("input", () => {
        if (messageEl.value) validateField(messageEl);
      });

      function setStatus(message: string, tone = "info") {
        if (!statusEl) return;
        statusEl.textContent = message;
        statusEl.dataset.tone = tone;
        statusEl.classList.remove(
          "text-red-600",
          "dark:text-red-400",
          "text-green-600",
          "dark:text-green-400",
          "text-amber-600",
          "dark:text-amber-400",
        );

        if (!message) {
          statusEl.dataset.tone = "idle";
          return;
        }

        const toneClasses =
          tone === "error"
            ? ["text-red-600", "dark:text-red-400"]
            : tone === "success"
              ? ["text-green-600", "dark:text-green-400"]
              : ["text-amber-600", "dark:text-amber-400"];

        statusEl.classList.add(...toneClasses);
      }

      // Modal elements
      const modal = document.getElementById("formModal");
      const modalLoading = document.getElementById("modalLoading");
      const modalSuccess = document.getElementById("modalSuccess");
      const modalError = document.getElementById("modalError");
      const modalOkBtn = document.getElementById("modalOkBtn");
      const modalRetryBtn = document.getElementById("modalRetryBtn");

      function showModal(state: "loading" | "success" | "error") {
        if (!modal || !modalLoading || !modalSuccess || !modalError) return;

        modal.classList.remove("hidden");
        modal.classList.add("flex");
        document.body.style.overflow = "hidden";

        modalLoading.classList.add("hidden");
        modalSuccess.classList.add("hidden");
        modalError.classList.add("hidden");

        if (state === "loading") modalLoading.classList.remove("hidden");
        if (state === "success") modalSuccess.classList.remove("hidden");
        if (state === "error") modalError.classList.remove("hidden");
      }

      function hideModal() {
        if (!modal) return;
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        document.body.style.overflow = "";
      }

      // Modal button handlers
      modalOkBtn?.addEventListener("click", hideModal);
      modalRetryBtn?.addEventListener("click", hideModal);

      form.addEventListener("submit", async (ev) => {
        ev.preventDefault();

        const name = nameEl.value.trim();
        const email = emailEl.value.trim();
        const phone = phoneEl.value.trim();
        const msg = messageEl.value.trim();

        // Check both honeypot fields
        if (hpEl.value.trim() || hp2El.value.trim()) return;

        // Validate all fields
        const nameValid = validateField(nameEl);
        const emailValid = validateField(emailEl, emailRegex);
        const phoneValid = validateField(phoneEl);
        const msgValid = validateField(messageEl);

        if (!nameValid || !emailValid || !phoneValid || !msgValid) {
          setStatus("Please fill out all required fields correctly.", "error");
          return;
        }

        // Show loading modal
        showModal("loading");
        btn.disabled = true;

        try {
          const res = await fetch("/api/contact", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ name, email, phone, message: msg }),
          });

          if (!res.ok) throw new Error("Failed to send");

          // Clear form and validation states
          nameEl.value = "";
          emailEl.value = "";
          phoneEl.value = "";
          messageEl.value = "";
          hpEl.value = "";
          hp2El.value = "";
          [nameEl, emailEl, phoneEl, messageEl].forEach((el) =>
            setFieldState(el, null),
          );
          setStatus("", "idle");

          // Show success modal
          showModal("success");
        } catch (err) {
          console.error(err);
          showModal("error");
        } finally {
          btn.disabled = false;
        }
      });
    })();
  </script>
</Base>
