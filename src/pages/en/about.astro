---
import Base from "../../layouts/Base.astro";

const title =
  "About Us | ByteWorks | Your Partner for Bilingual Small Business Websites";
const description =
  "Learn about ByteWorks, a web design studio dedicated to helping small businesses succeed online with professional, bilingual websites and all-inclusive support.";
const breadcrumb = [
  { name: "Home", url: "https://byteworksagency.com/en/" },
  { name: "About", url: "https://byteworksagency.com/en/about/" },
];
---

<Base
  title={title}
  description={description}
  image="/og-image.png"
  lang="en"
  breadcrumb={breadcrumb}
>
  <section class="px-6 md:px-10 lg:px-16 max-w-6xl mx-auto py-16 md:py-24">
    <header class="text-center max-w-3xl mx-auto space-y-3 mb-12">
      <h1 class="text-3xl md:text-5xl font-semibold">About ByteWorks</h1>
      <p class="text-gray-600 dark:text-gray-300">
        We build clean, modern, bilingual websites. Look professional and
        attract customers. No tech talk. Just reliable service and real results.
      </p>
    </header>

    <div class="grid md:grid-cols-2 gap-10 items-start">
      <article class="space-y-4">
        <h2 class="text-xl md:text-2xl font-semibold">What we do</h2>
        <p class="text-gray-700 dark:text-gray-200">
          ByteWorks is a simple website solution for small businesses.
          Professional online presence without the overwhelm.
        </p>
        <ul
          class="list-disc list-inside text-sm text-gray-700 dark:text-gray-200 space-y-1"
        >
          <li>English and Spanish included.</li>
          <li>Fast, clean, SEO-ready pages.</li>
          <li>Hosting, security, and backups handled.</li>
          <li>Monthly updates included.</li>
          <li>Add-ons for SEO, blog, or products.</li>
        </ul>
      </article>

      <article class="space-y-4">
        <h2 class="text-xl md:text-2xl font-semibold">How we work</h2>
        <p class="text-gray-700 dark:text-gray-200">
          Clear pricing. Zero stress. Modern stack for performance and
          stability.
        </p>
        <ul
          class="list-disc list-inside text-sm text-gray-700 dark:text-gray-200 space-y-1"
        >
          <li>Fast loading, mobile-first, and accessible.</li>
          <li>Flexible content that grows with you.</li>
          <li>Direct support via social channels.</li>
        </ul>
      </article>
    </div>

    <div class="grid md:grid-cols-2 gap-10 items-start mt-12">
      <article class="space-y-3">
        <h2 class="text-xl md:text-2xl font-semibold">Process</h2>
        <ol
          class="list-decimal list-inside text-sm text-gray-700 dark:text-gray-200 space-y-1"
        >
          <li>We understand your goals</li>
          <li>We organize content and structure</li>
          <li>We design and build your site</li>
          <li>You review and approve</li>
          <li>Launch, updates, and support</li>
        </ol>
      </article>

      <article class="space-y-3">
        <h2 class="text-xl md:text-2xl font-semibold">What you get</h2>
        <ul
          class="list-disc list-inside text-sm text-gray-700 dark:text-gray-200 space-y-1"
        >
          <li>A professional website that inspires trust</li>
          <li>Fast load times and smooth experience</li>
          <li>SEO-friendly pages and clean metadata</li>
          <li>Analytics for simple insights</li>
          <li>Maintenance, backups, and support</li>
        </ul>
      </article>
    </div>

    <div class="mt-12 text-center">
      <a
        href="/en/contact"
        class="inline-flex items-center justify-center px-6 py-3 rounded-md bg-black text-white dark:bg-white dark:text-black hover:opacity-90 transition"
      >
        Work with us
      </a>
    </div>
  </section>
</Base>
