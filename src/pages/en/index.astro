---
import Base from "../../layouts/Base.astro";
import AddOns from "../../components/AddOns.astro";
import PlanIcon from "../../components/PlanIcon.astro";
import ScrollReveal from "../../components/ScrollReveal.astro";
import FAQAccordion from "../../components/FAQAccordion.astro";
import { HOME_FAQS, HOME_PLANS } from "../../content/home";

const title = "ByteWorks | Modern bilingual websites. Upkeep included.";
const description =
  "Fast bilingual sites. Transparent pricing, hosting, SSL, and maintenance included. We design, develop, and update it for you.";

const homePlans = HOME_PLANS.en;
const faqs = HOME_FAQS.en;
---

<Base title={title} description={description} image="/og-image.png" lang="en">
  <section class="px-4 max-w-[960px] mx-auto py-20" id="about">
    <!-- HERO -->
    <div class="text-center space-y-6">
      <h1
        class="text-4xl md:text-6xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
      >
        Professional Web Design for Your Business
      </h1>
      <p
        class="text-base md:text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto"
      >
        Subscription-based web design for entrepreneurs and small businesses.
      </p>
      <div class="flex items-center justify-center">
        <a
          href="#pricing"
          class="inline-flex items-center justify-center h-12 px-6 rounded-lg bg-transparent text-gray-900 dark:text-white border border-primary hover:bg-primary/10 dark:hover:bg-primary/20 transition-colors"
        >
          See Plans
        </a>
      </div>
    </div>

    <!-- BENEFITS -->
    <div class="grid md:grid-cols-3 gap-6 mt-16">
      <div
        class="p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50"
      >
        <h3
          class="font-heading font-bold text-gray-900 dark:text-text-primary mb-2"
        >
          Bilingual by default
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">
          English and Spanish structure ready. SEO-friendly routes.
        </p>
      </div>
      <div
        class="p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50"
      >
        <h3
          class="font-heading font-bold text-gray-900 dark:text-text-primary mb-2"
        >
          Transparent pricing
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">
          Clear pricing. Maintenance included. No surprises.
        </p>
      </div>
      <div
        class="p-6 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-background-dark/50"
      >
        <h3
          class="font-heading font-bold text-gray-900 dark:text-text-primary mb-2"
        >
          Fast & secure
        </h3>
        <p class="text-sm text-gray-600 dark:text-gray-300">
          Performance-focused. SSL and backups included.
        </p>
      </div>
    </div>

    <!-- PLANS -->
    <div class="mt-20" id="pricing">
      <div class="flex flex-col gap-4 text-center mb-6">
        <h2
          class="text-3xl md:text-4xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
        >
          Transparent Pricing
        </h2>
        <p
          class="text-base font-normal leading-normal max-w-2xl mx-auto text-gray-600 dark:text-gray-300"
        >
          Choose your plan. No hidden fees.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          homePlans.map((p) => (
            <div
              class={`relative flex h-full flex-col rounded-xl bg-white dark:bg-background-dark/50 p-6 ${p.name === "Pro" ? "border-2 border-primary" : "border border-gray-200 dark:border-gray-700"}`}
            >
              {p.name === "Pro" && (
                <p class="absolute top-0 -translate-y-1/2 left-1/2 -translate-x-1/2 text-white text-xs font-medium tracking-[0.015em] rounded-full bg-secondary px-3 py-1 text-center">
                  Most Popular
                </p>
              )}
              <div class="space-y-1">
                <h3
                  class={`flex items-center gap-3 text-2xl md:text-3xl font-extrabold tracking-[-0.025em] font-heading ${p.name === "Pro" ? "text-primary" : "text-gray-900 dark:text-text-primary"}`}
                >
                  <PlanIcon name={p.name} />
                  {p.name}
                </h3>
                <div class="flex items-center gap-2">
                  <p class="text-lg md:text-xl font-semibold text-gray-900 dark:text-text-primary">
                    {p.price}
                  </p>
                  <span class="inline-block text-[11px] md:text-xs font-medium bg-primary/10 text-primary px-2 py-0.5 rounded">
                    {p.yearly}
                  </span>
                </div>
              </div>
              <ul class="mt-4 space-y-2 text-sm text-gray-600 dark:text-gray-300">
                {p.features.map((f) => (
                  <li class="flex gap-3 items-center">
                    <span class="material-symbols-outlined text-primary text-base">
                      check
                    </span>
                    {f}
                  </li>
                ))}
              </ul>
              <div class="mt-auto pt-4 border-t border-gray-200 dark:border-gray-700">
                <a
                  href="/en/pricing"
                  class="inline-flex w-full items-center justify-center h-10 px-4 rounded-lg bg-primary text-white font-bold hover:bg-primary/90 transition-colors"
                >
                  See Plans
                </a>
              </div>
            </div>
          ))
        }
      </div>
      <p class="text-center text-xs text-gray-500 dark:text-gray-400 mt-3">
        Prices in USD. For other payment methods/currencies, contact us.
      </p>
    </div>

    <AddOns lang="en" id="add-ons" summaryOnly={true} />

    <!-- HOW IT WORKS -->
    <div class="mt-20" id="how-it-works">
      <div class="flex flex-col gap-4 text-center mb-8">
        <h2
          class="text-3xl md:text-4xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
        >
          Our Structured Process
        </h2>
        <p
          class="text-base font-normal leading-normal max-w-2xl mx-auto text-gray-600 dark:text-gray-300"
        >
          We follow a clear process to bring your vision to life.
        </p>
      </div>
      <div class="grid grid-cols-[auto_1fr] gap-x-8 gap-y-4 max-w-md mx-auto">
        <div class="flex flex-col items-center gap-2">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">search</span>
          </div>
          <div class="w-px bg-gray-300 dark:bg-gray-600 flex-grow"></div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Discovery
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            We start by understanding your goals and requirements. (1-2 Weeks)
          </p>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">design_services</span>
          </div>
          <div class="w-px bg-gray-300 dark:bg-gray-600 flex-grow"></div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Design
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            We create a stunning, user-friendly design. (2-3 Weeks)
          </p>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">developer_mode</span>
          </div>
          <div class="w-px bg-gray-300 dark:bg-gray-600 flex-grow"></div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Development
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            We build your site with clean code and modern tech. (3-4 Weeks)
          </p>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 text-primary"
          >
            <span class="material-symbols-outlined">rocket_launch</span>
          </div>
        </div>
        <div>
          <h3
            class="text-lg font-bold font-heading text-gray-900 dark:text-text-primary"
          >
            Launch
          </h3>
          <p class="text-gray-600 dark:text-gray-400">
            We deploy your site and provide ongoing support. (1 Week)
          </p>
        </div>
      </div>
    </div>

    <!-- FAQ SECTION -->
    <ScrollReveal class="mt-20" delay={100}>
      <div id="faq">
        <div class="flex flex-col gap-4 text-center mb-8">
          <h2
            class="text-3xl md:text-4xl font-extrabold leading-tight tracking-[-0.033em] text-gray-900 dark:text-text-primary font-heading"
          >
            Frequently Asked Questions
          </h2>
          <p
            class="text-base font-normal leading-normal max-w-2xl mx-auto text-gray-600 dark:text-gray-300"
          >
            Quick answers to common questions.
          </p>
        </div>
        <FAQAccordion faqs={faqs} lang="en" />
        <p class="text-center mt-6">
          <a href="/en/faq" class="text-primary hover:underline font-medium">
            View all FAQs â†’
          </a>
        </p>
      </div>
    </ScrollReveal>
  </section>
</Base>
